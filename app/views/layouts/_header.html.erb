<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo"), root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? && current_user.is_admin? %>
        <li><%= link_to t(:manage), admin_home_path %></li>
      <% end %>
      <li><%= link_to t("signup.content"), signup_path %></li>
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.name %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if current_user.is_admin? %>
              <li><%= link_to t("index.header"), admin_users_path %></li>
              <li><%= link_to t("subject.content"),
                admin_subjects_path %></li>
            <% end %>
            <li>
              <%= link_to t("home.profile"), edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to t("logout.content"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login.content"), login_path %></li>
      <% end %>
    </ul>
  </div>
</header>
